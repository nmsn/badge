{
  "name": "make-badge",
  "version": "0.3.0",
  "description": "Generate badges under the current directory.",
  "type": "module",
  "sideEffects": false,
  "files": [
    "lib/"
  ],
  "bin": {
    "badge": "/lib/cli.js"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "./lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "build:clean": "tsc --build --clean",
    "build:es": "tsc",
    "build:watch": "tsc --watch",
    "build": "npm run build:clean && npm run build:es",
    "release": "npm run build && rltb"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmsn/badge.git"
  },
  "keywords": [
    "badge",
    "img",
    "markdown",
    "shields"
  ],
  "author": "nmsn <1336696700@qq.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nmsn/badge/issues"
  },
  "homepage": "https://github.com/nmsn/badge#readme",
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "prettier": "2.8.1",
    "release-toolbox": "0.1.0",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "inquirer": "^9.1.4",
    "query-string": "^8.1.0"
  },
  "engines": {
    "node": ">=16"
  }
}
